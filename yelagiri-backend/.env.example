# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/yelagiri-guide

# Server Configuration
PORT=5000
NODE_ENV=development

# Payment Gateway Configuration
# Default is CASHFREE
PAYMENT_GATEWAY=CASHFREE

# Cashfree Configuration
# Get credentials from Cashfree Dashboard
CASHFREE_APP_ID=your_app_id
CASHFREE_SECRET_KEY=your_secret_key
CASHFREE_ENV=TEST
# Possible values: TEST, PROD

# Email Configuration (Gmail SMTP)
# For Gmail: Enable 2FA and create App Password: https://support.google.com/accounts/answer/185833
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM_NAME=Go Yelagiri
EMAIL_FROM_ADDRESS=bookings@goyelagiri.com

# Company Details (for invoices)
COMPANY_NAME=Go Yelagiri
COMPANY_ADDRESS=123 Hill Station Road, Yelagiri Hills, Tamil Nadu 635853
COMPANY_PHONE=+91 98765 43210
COMPANY_EMAIL=info@goyelagiri.com
COMPANY_WEBSITE=https://goyelagiri.com
COMPANY_GST_NUMBER=33XXXXX1234X1ZX

# Tax Configuration
GST_RATE=18
# GST rate in percentage (e.g., 18 for 18%)

# Invoice Configuration
INVOICE_PREFIX=INV
INVOICE_STORAGE_PATH=./invoices
# Path where invoice PDFs will be stored

# Frontend URL (for redirects and email links)
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-jwt-secret-key-change-this-in-production
INVOICE_TOKEN_SECRET=your-invoice-token-secret-change-this

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window
